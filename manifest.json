{
    "manifest_version": 3,
    "name": "Tranlation Assistant",
    "version": "1.0",
    "description": "Translate selected text using Google Translate (English to Korean) and pop-up the translated result quickly. Shortcut: Ctrl+Shift+X",
    "permissions": ["contextMenus", "activeTab", "clipboardRead", "commands", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "commands": {
      "translate_shortcut": {
        "suggested_key": {
          "default": "Ctrl+Shift+X",
          "windows": "Ctrl+Shift+X"
        },
        "description": "Translate selected text"
      }
    },
    "icons": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    }
  }
  